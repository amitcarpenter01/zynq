    <div class="ct_login_right">
      <div class="mb-5">
        <h4 class="ct_fs_44 ct_fw_600">Reset Password</h4>
      </div>

      <form id="resetPasswordForm">
        <div class="form-group mb-4 position-relative">
          <div class="ct_input_icon_left">
            <img src="https://getzynq.io/lock.svg" alt="">
          </div>
          <input type="password" id="newPassword" placeholder="New password"
            class="form-control ct_input ct_input_ps_40 ct_input_pe_40" />
          <i class="fa-solid fa-eye-slash ct_show_eye" onclick="togglePassword('newPassword', this)"></i>
        </div>

        <div class="form-group mb-4 position-relative">
          <div class="ct_input_icon_left">
            <img src="https://getzynq.io/lock.svg" alt="">
          </div>
          <input type="password" id="confirmPassword" placeholder="Confirm password"
            class="form-control ct_input ct_input_ps_40 ct_input_pe_40" />
          <i class="fa-solid fa-eye-slash ct_show_eye" onclick="togglePassword('confirmPassword', this)"></i>
        </div>

        <div class="mt-5">
          <button type="submit" id="submitButton" class="ct_black_btn w-100">Save Password</button>
        </div>
      </form>
    </div>
  </section>

  <!-- Scripts -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

  <script>
    function togglePassword(fieldId, iconElement) {
      const field = document.getElementById(fieldId);
      if (field.type === "password") {
        field.type = "text";
        iconElement.classList.remove("fa-eye-slash");
        iconElement.classList.add("fa-eye");
      } else {
        field.type = "password";
        iconElement.classList.remove("fa-eye");
        iconElement.classList.add("fa-eye-slash");
      }
    }

    document.getElementById("resetPasswordForm").addEventListener("submit", async function (event) {
      event.preventDefault();

      const newPassword = document.getElementById("newPassword").value;
      const confirmPassword = document.getElementById("confirmPassword").value;
      const urlParams = new URLSearchParams(window.location.search);
      const token = urlParams.get("token");

      if (!newPassword || !confirmPassword) {
        toastr.error("Please fill in both fields.");
        return;
      }

      if (newPassword !== confirmPassword) {
        toastr.error("Passwords do not match.");
        return;
      }

      if (!validatePassword(newPassword)) {
        toastr.error("Password must be at least 8 characters and include at least 1 lowercase letter, 1 uppercase letter, 1 number, and 1 special character.");
        return;
      }

      const loaderOverlay = document.getElementById("loaderOverlay");
      loaderOverlay.style.display = "flex";

      try {
        const response = await fetch("/webuser/reset-password", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ token, newPassword }),
        });

        const result = await response.json();

        if (result.success) {
          toastr.success("Password reset successfully.");
          setTimeout(() => {
            window.location.href = "/webuser/success-reset";
          }, 1000);
        } else {
          toastr.error(result.message || "Something went wrong.");
        }
      } catch (error) {
        toastr.error("Error: " + error.message);
      } finally {
        loaderOverlay.style.display = "none";
      }
    });

    function validatePassword(password) {
      const passwordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[!@#\$%&'*+./:;<=>?^_`{|}~])[A-Za-z\d!@#\$%&'*+./:;<=>?^_`{|}~]{8,}$/;
      return passwordRegex.test(password);
    }
  </script>

