<script>
  window.addEventListener('pageshow', function (event) {
    const url = window.location.href;
    const parts = url.split('/reset-password/');
    if (parts.length > 1) {
      const tokens = parts[1].split('?')[0];
      const get = localStorage.getItem('forget_password');
      if (get === tokens) {
        window.location.href = '/admin/success-change';
      }
    }
  });
